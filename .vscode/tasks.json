{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Hello in Ada",
            "type": "shell",
            "command": "gprbuild",
            "args": [
                "-p",
                "-P",
                "${cwd}/hello.gpr"
            ],
            "problemMatcher": ["$ada"],
            "group": {
                "kind": "build",
                "isDefault": true
            }             
        }
    ]
}